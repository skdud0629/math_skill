<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/attendance_number_background"
    android:paddingHorizontal="60dp"
    android:paddingVertical="40dp"
    >

    <TextView
        android:id="@+id/attendanceStatus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="출석 현황"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentStudent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="00명이 왔고 00명이 공부중"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/attendanceStatus"
        app:layout_constraintTop_toBottomOf="@+id/attendanceStatus"/>


    <TextView
        android:id="@+id/top3Student"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="금일 학습시간 top3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/currentStudent"
        app:layout_constraintTop_toBottomOf="@+id/currentStudent"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/top3Student"
        app:layout_constraintTop_toBottomOf="@+id/top3Student">

        <TextView
            android:id="@+id/top1Student"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:text="1. 이름 00시간 00분"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/top3Student"
            app:layout_constraintTop_toBottomOf="@+id/top3Student" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="67dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/student_header"
        app:layout_constraintTop_toBottomOf="@+id/currentStudent"
        tools:layout_editor_absoluteX="60dp">

        <TextView
            android:id="@+id/studentNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이름"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/checkInTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="입실"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/checkOutTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="퇴실"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/studyTimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="학습시간"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="60dp"
        tools:listitem="@layout/item_student" />

</androidx.constraintlayout.widget.ConstraintLayout>